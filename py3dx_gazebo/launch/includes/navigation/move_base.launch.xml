<launch>

    <arg name="robot_name" default="r1" />

    <arg name="odom_frame_id"   default="$(arg robot_name)/odom"/>
    <arg name="base_frame_id"   default="$(arg robot_name)/chassis"/>
    <arg name="global_frame_id" default="map"/>

    <arg name="odom_topic" default="odom" />
    <arg name="laser_topic" default="front_laser/scan" />


    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

        <rosparam file="$(find py3dx_gazebo)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find py3dx_gazebo)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find py3dx_gazebo)/param/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find py3dx_gazebo)/param/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find py3dx_gazebo)/param/dwa_local_planner_params.yaml" command="load" />
        <rosparam file="$(find py3dx_gazebo)/param/move_base_params.yaml" command="load" />
        <rosparam file="$(find py3dx_gazebo)/param/global_planner_params.yaml" command="load" />
        <rosparam file="$(find py3dx_gazebo)/param/navfn_global_planner_params.yaml" command="load" />
        <!-- external params file that could be loaded into the move_base namespace -->

        <!-- reset frame_id parameters using user input data -->
        <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
        <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
        <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

        <remap from="cmd_vel" to="navigation_velocity_smoother/raw_cmd_vel"/>
        <remap from="odom" to="$(arg odom_topic)"/>
        <remap from="scan" to="$(arg laser_topic)"/>

        <remap from="static_map" to="/static_map"/>
        <remap from="map" to="/map"/>
        <remap from="tf" to="/tf"/>
        <remap from="cmd_vel"   to="cmd_vel" />

        <remap from="move_base_simple/goal" to="/move_base_simple/goal"/>
    </node>
</launch>
